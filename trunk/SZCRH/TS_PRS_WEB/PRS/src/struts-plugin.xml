<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.objectFactory" value="spring"/>
	<package name="default" extends="struts-default" namespace="/">
  <global-results>
   <result name="index">/index.jsp</result>
   <result name="success">/success.html</result>
   <result name="error">/error.jsp</result>
  </global-results>
 </package>
	
	<package name="Main" extends="struts-default" namespace="/">
		 
		
		<action name="loginForm" class="com.tsoft.action.MainAction" method="mainForm">
			<result name="success">/jsp/LoginPage.jsp</result>
        </action>
        <action name="regForm" class="com.tsoft.action.MainAction" method="regForm">
			<result name="success">Registion.jsp</result>
        </action> 
        <action name="registion" class="registionAction" method="memReg">
        	<result name="success">ResultPage.jsp</result>
        	<result name="error">ResultPage.jsp</result>	
        </action>
        <action name="login" class="loginAction" method="operValidation">
        	<result name="success">MemberDetail.jsp</result>
        	<result name="error">ResultPage.jsp</result>
        </action>
		<action name="salaryForm" class="memberSalaryAction" method="toSalary">
        	<result name="success">MemberSalaryDetail.jsp</result>
        	<result name="error">ResultPage.jsp</result>
        </action>
        <action name="allowForm" class="memberAllowAction" method="toAllow">
        	<result name="success">MemberDetail.jsp</result>
        	<result name="error">ResultPage.jsp</result>
        </action> 
	</package> 
	<package name="SystemControl" extends="json-default" namespace="/">
		 <action name="*_*" class="{1}Action" method="{2}">
		 	<result name="success" type="json"></result>
		 	<result name="error">/jsp/Error_ResultPage.jsp</result>
		 	<result name="regist_success">/jsp/Regist_ResultPage.jsp</result>
		 </action>
	</package>
	<package name="BusinessControl" extends="struts-default" namespace="/bus">
		<action name="*_*" class="{1}Action" method="{2}">
			<result name="success">/jsp/{1}_{2}.jsp</result>
			<result name="error">/jsp/Error_ResultPage.jsp</result>
		</action>
	</package>
</struts>
